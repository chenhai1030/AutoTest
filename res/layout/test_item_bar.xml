<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_item_bar_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_20px"
        android:layout_marginStart="@dimen/dimen_48px"
        android:layout_marginEnd="@dimen/dimen_10px"
        android:layout_weight="0.7"
        android:gravity="end"
        android:text="@string/app_name"
        android:textSize="@dimen/dimen_30px" />


    <TextView
        android:id="@+id/tv_item_bar_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_20px"
        android:layout_marginEnd="@dimen/dimen_20px"
        android:layout_marginTop="@dimen/dimen_20px"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textSize="@dimen/dimen_30px" />

</LinearLayout>